select * from
    (select
        A.START_DATE as PROJECT_START,
        (select B.END_DATE
         from PROJECTS as B
         where (select count(*) from PROJECTS as TEMP where TEMP.START_DATE=B.END_DATE)<1
            and B.END_DATE>=A.END_DATE
        order by B.END_DATE asc limit 1) as PROJECT_END
    from PROJECTS as A
    where (select count(*) from PROJECTS as TEMP where TEMP.END_DATE=A.START_DATE)<1) as C
order by
    datediff(C.PROJECT_START, C.PROJECT_END) desc, C.PROJECT_START asc;
